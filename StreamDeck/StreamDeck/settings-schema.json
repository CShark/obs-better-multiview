{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "JSON Schema for StreamDeck Settings",

  "type": "object",

  "properties": {
    "Connection": {
      "type": "object",
      "description": "Information on how to connect to OBS",
      "properties": {
        "IP": {
          "type": "string",
          "description": "The host IP of the OBS Websocket"
        },
        "Port": {
          "type": "integer",
          "description": "The Port for OBS WebSocket"
        },
        "Password": {
          "type": "string",
          "description": "The Password for OBS WebSocket"
        }
      }
    },
    "LastProfile": {
      "type": "string",
      "description": "The last used Profile"
    } 
  }
}