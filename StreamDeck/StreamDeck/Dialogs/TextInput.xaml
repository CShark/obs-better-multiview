<Window x:Class="StreamDeck.Dialogs.TextInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StreamDeck.Dialogs"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="{Binding DialogTitle}" Height="207" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Message}" Margin="10" VerticalAlignment="Bottom" TextWrapping="Wrap" />
        <TextBox Grid.Row="1" Margin="10" VerticalAlignment="Top" x:Name="input" Text="{Binding Value, Mode=TwoWay}" />

        <UniformGrid Grid.Row="2" HorizontalAlignment="Right" Columns="2" Margin="5">
            <Button Margin="2" IsDefault="True" Click="Confirm_OnClick">OK</Button>
            <Button Margin="2" Padding="3" IsCancel="True" Click="Cancel_OnClick">Abbrechen</Button>
        </UniformGrid>
    </Grid>
</Window>